# ===========================================
# OmniPro - Configuração de Ambiente
# ===========================================

# ----------- Geral -----------
NODE_ENV=development
APP_URL=http://localhost:3000
API_URL=http://localhost:3001
WIDGET_URL=http://localhost:3002

# ----------- Backend -----------
PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ----------- PostgreSQL -----------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=omnipro
DB_USER=omnipro
DB_PASSWORD=omnipro_secret_2026

# ----------- Redis -----------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secret_2026

# ----------- WhatsApp (Evolution API) -----------
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your-evolution-api-key

# ----------- Meta (Facebook & Instagram) -----------
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_VERIFY_TOKEN=your-meta-verify-token
META_PAGE_ACCESS_TOKEN=your-page-access-token
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# ----------- MercadoLivre -----------
MELI_APP_ID=your-meli-app-id
MELI_SECRET_KEY=your-meli-secret-key
MELI_REDIRECT_URI=http://localhost:3001/api/channels/mercadolivre/callback

# ----------- Email (IMAP/SMTP) -----------
EMAIL_IMAP_HOST=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# ----------- OpenAI (Agentes IA) -----------
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o

# ----------- Storage -----------
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
