{
  "name": "omnipro-backend",
  "version": "1.0.0",
  "description": "OmniPro Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migration:generate": "typeorm migration:generate -d src/config/database.ts",
    "migration:run": "typeorm migration:run -d src/config/database.ts",
    "seed": "ts-node src/database/seed.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-imap": "^0.9.6",
    "nodemailer": "^6.9.14",
    "openai": "^4.67.0",
    "pg": "^8.12.0",
    "socket.io": "^4.7.5",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0",
    "axios": "^1.7.7",
    "mailparser": "^3.7.1",
    "morgan": "^1.10.0",
    "express-validator": "^7.2.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.5.4",
    "@types/node-imap": "^0.9.3",
    "@types/nodemailer": "^6.4.15",
    "@types/uuid": "^10.0.0",
    "@types/morgan": "^1.9.9",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
